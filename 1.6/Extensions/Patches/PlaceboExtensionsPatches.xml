<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="XmlExtensions.OptionalPatch">
        <modId>Aeris.Placebo</modId>
        <key>fires</key>
        <defaultValue>false</defaultValue>
        <caseTrue>
            <Operation Class="PatchOperationRemove">
                <xpath>/Defs/ThingDef[defName="Fire"]/comps/li[@Class="CompProperties_Glower"]</xpath>
            </Operation>
        </caseTrue>
    </Operation>

    <Operation Class="XmlExtensions.OptionalPatch">
        <modId>Aeris.Placebo</modId>
        <key>mothballing</key>
        <defaultValue>true</defaultValue>
        <caseTrue>
            <Operation Class="PatchOperationAdd">
                <success>Always</success>
                <xpath>Defs/HediffDef[not(alwaysAllowMothball="true")]</xpath>
                <value>
                    <alwaysAllowMothball>true</alwaysAllowMothball>
                </value>
            </Operation>
            <Operation Class="PatchOperationAdd">
                <success>Always</success>
                <xpath>Defs/HediffDef[not(alwaysAllowMothballCached="true")]</xpath>
                <value>
                    <alwaysAllowMothballCached>true</alwaysAllowMothballCached>
                </value>
            </Operation>
        </caseTrue>
    </Operation>
</Patch>